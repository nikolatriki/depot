<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>

  <table class="table-auto">
  <%= render cart.line_items.order(:created_at) %>
    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="3">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black"><%=number_to_currency cart.total_price, format: "%n %u", unit: "MKD"%></td>
      </tr>
    </tfoot>
  </table>
  <%debugger%>
  <div class="flex mt-1">
    <%= button_to "Empty Cart", cart_path(cart), method: :delete, class: "ml-4 rounded-lg py-1 px-2 text-white bg-green-600" %>
    <%= button_to "Checkout", new_order_path, method: :get, disabled: current_page?(new_order_path) || @order.errors.any?, class: "#{ "cursor-not-allowed" if current_page?(new_order_path) || @order.errors.any? } ml-4 rounded-lg py-1 px-2 text-white bg-green-400" %>
  </div>
</div>
