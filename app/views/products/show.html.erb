<% content_for :og_tags do %>
  <meta property="og:title" content="<%= @product.title %>">
  <meta property="og:url" content="<%= product_url(@product) %>">
  <meta property="og:type" content="article">
  <meta property="og:description" content="<%= @product.description %>">
  <meta property="og:image" content="<%= image_url(@product.image_url) %>">
  <meta property="og:image:type" content="image/jpeg" />
<% end %>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @product %>

    <%= link_to t('.edit'), edit_product_path(@product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to t('.destroy'), product_path(@product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to t('.back'), products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
